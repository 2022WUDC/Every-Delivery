<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity2">

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="322dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="23dp"
        android:hint="이름"
        app:layout_constraintBottom_toTopOf="@+id/edt_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_nickname"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="18dp"
        android:hint="닉네임"
        app:layout_constraintBottom_toTopOf="@+id/edt_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="334dp"
        android:layout_height="54dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="23dp"
        android:hint="아이디"
        app:layout_constraintBottom_toTopOf="@+id/edt_passwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_passwd"
        android:layout_width="319dp"
        android:layout_height="56dp"
        android:layout_marginBottom="19dp"
        android:hint="비밀번호"
        app:layout_constraintBottom_toTopOf="@+id/edt_passwd_chk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_passwd_chk"
        android:layout_width="320dp"
        android:layout_height="57dp"
        android:hint="비밀번호 확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edt_id"
        app:layout_constraintStart_toStartOf="@+id/edt_phone"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="251dp"
        android:layout_height="51dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:hint="전화번호"
        app:layout_constraintEnd_toStartOf="@+id/btn_phone_chk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_passwd_chk" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:enabled="false"
        android:text="회원가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_cert_chk"
        android:layout_width="241dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:hint="인증번호"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/btn_cert_chk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_phone_chk" />

    <Button
        android:id="@+id/btn_cert_chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:enabled="false"
        android:text="인증"
        app:layout_constraintBaseline_toBaselineOf="@+id/edt_cert_chk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edt_cert_chk" />

    <Button
        android:id="@+id/btn_phone_chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="확인"
        app:layout_constraintBaseline_toBaselineOf="@+id/edt_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edt_phone" />


</androidx.constraintlayout.widget.ConstraintLayout>